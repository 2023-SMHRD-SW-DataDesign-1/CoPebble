<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.mapper.DiaryMapper">

	<insert id="updateCalendar" parameterType="calendarDTO">
		insert into calendar VALUES(#{NUM},#{FAMILY_KEY},#{ASSORT},#{WHO},#{title},#{start},#{end},#{color})
	</insert>

    <select id="selectCalendar" resultType="calendarDTO">
        SELECT title, S_DATE AS "start", E_DATE AS "end", color FROM calendar WHERE Family_key = #{FAMILY_KEY}
    </select>

	<delete id="deleteCalendar">
    DELETE from calendar where Family_key = #{Family_key}
</delete>
</mapper>